# Discord
DISCORD_TOKEN=

# Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Spotify
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# Optional but recommended for full playlist access
SPOTIFY_REFRESH_TOKEN=
SPOTIFY_MARKET=US
SPOTIFY_MAX_TRACKS=500
# Keep voice connection this many seconds after queue ends
QUEUE_IDLE_DISCONNECT_SECONDS=180
# Optional runtime binary paths (recommended in Railway/Linux)
FFMPEG_PATH=/usr/bin/ffmpeg
YTDLP_PATH=/usr/bin/yt-dlp
# Optional yt-dlp tuning/cookies when YouTube blocks datacenter IPs
YTDLP_EXTRACTOR_ARGS=youtube:player_client=android
YTDLP_COOKIES_PATH=/tmp/youtube-cookies.txt
YTDLP_COOKIES_BASE64=
YTDLP_COOKIES=
YOUTUBE_COOKIE=

# Pokemon mini-game
POKEMON_START_PULLS=20
POKEMON_DAILY_PULLS=5
# Optional: if set (>0), overrides hours
POKEMON_DAILY_COOLDOWN_MINUTES=
POKEMON_DAILY_COOLDOWN_HOURS=24
POKEMON_MAX_PULL_BATCH=10
POKEMON_TEAM_SIZE=6
POKEMON_BATTLE_LEVEL=50
POKEMON_CAPTURE_LEVEL=5
POKEMON_START_MONEY=3000
POKEMON_DAILY_MONEY=600
POKEMON_PVP_MONEY_WIN=500
POKEMON_PVP_MONEY_LOSS=200
POKEMON_PVP_XP_WIN=80
POKEMON_PVP_XP_LOSS=35
POKEMON_MAX_DEX_ID=1025
# Optional: max items requested from PokeAPI catalog endpoint
POKEMON_ITEM_API_LIMIT=2500

# Firebase (optional, recommended for persistent Pokemon data)
# Set to true to force Firebase usage. If omitted, bot auto-enables when credentials are present.
POKEMON_USE_FIREBASE=
# Option 1: raw JSON service account
FIREBASE_SERVICE_ACCOUNT_JSON=
# Option 2: base64-encoded JSON service account
FIREBASE_SERVICE_ACCOUNT_BASE64=
# Optional Firebase database URL
FIREBASE_DATABASE_URL=
# Root Firestore collection for Pokemon profiles
FIREBASE_POKEMON_COLLECTION=pokemonGuilds
